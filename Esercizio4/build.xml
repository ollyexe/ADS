<project name="grafo" basedir="." default="all">
    <property name="build.dir" location="build"/>


    <target depends="init" name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac destdir="${classes.dir}" srcdir="${src.dir}" includeantruntime="false" encoding="iso-8859-1">
            <classpath>
                <pathelement location="${junit}"/>
                <pathelement location="${hamcrest-core}"/>
            </classpath>
        </javac>
    </target>


    <target depends="compile" name="jar">
        <mkdir dir="${build.dir}"/>
        <jar destfile="build/Main.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="Main"/>
            </manifest>
        </jar>
    </target>

    <target depends="compile" name="junit">
        <mkdir dir="build"/>
        <jar destfile="build/TestGraphMain.jar" basedir="${classes.dir}">
            <zipgroupfileset dir="lib" includes="*.jar" excludes=""/>
            <manifest>
                <attribute name="Main-Class" value="TestGraphMain"/>
                <attribute name="Class-Path" value="${classpath}"/>
            </manifest>
        </jar>
    </target>

</project>